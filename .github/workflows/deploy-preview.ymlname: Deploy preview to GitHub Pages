
on:
  push:
    branches: ['chore/remove-node_modules']

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Install dependencies
        run: npm ci

      - name: Build
        run: npm run build  # Adjust if your build command is different (e.g., if no npm, remove this step)

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: preview
          path: build/  # Adjust to your build output dir (e.g., dist/ or public/)

  deploy:
    runs-on: ubuntu-latest
    needs: build-and-deploy
    permissions:
      pages: write
      id-token: write
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Download artifact
        uses: actions/download-artifact@v4
        with:
          name: preview

      - name: Upload to GitHub Pages
        uses: actions/upload-pages-artifact@v3
        with:
          path: .

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4name: Deploy preview to GitHub Pages

on:
  push:
    branches: [ chore/remove-node_modules, main ]
  workflow_dispatch: {}

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Use Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install dependencies
        run: |
          if [ -f package.json ]; then npm ci || true; fi

      - name: Build site
        run: |
          if [ -d site ]; then cp -R site public; fi
          # If repo root contains index.html, use it; else expect site/ folder.
          if [ -f package.json ] && grep -q 'build' package.json 2>/dev/null; then
            npm run build || true
          fi
          # If a build produced a dist or build folder, copy it to public
          if [ -d dist ]; then cp -R dist/* public/ || true; fi
          if [ -d build ]; then cp -R build/* public/ || true; fi

      - name: Upload artifact for GitHub Pages
        uses: actions/upload-pages-artifact@v1
        with:
          path: ./public

  deploy:
    needs: build-and-deploy
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.page-url.outputs.url }}
    steps:
      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v1

      - name: Output published URL
        id: page-url
        run: echo "Published site available via GitHub Pages"
